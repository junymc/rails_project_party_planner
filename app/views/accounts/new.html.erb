<h1>New Account</h1>

<%= form_with(model: @account, local: true) do |f| %>
<div class="radio">
    Are you sign up as a host or a guest?
    <br />
    <%= f.label :host %>
    <%= f.radio_button :user_type, 'Host' %>
    <%= f.label :guest %>
    <%= f.radio_button :user_type, 'Guest' %>
</div>
<br>
    <%= f.label :email %><br />
    <%= f.email_field :email %>
    <br>

    <%= f.label :password %><br />
    <%= f.password_field :password_digest %>


    <%= f.submit %>
  <% end %>
