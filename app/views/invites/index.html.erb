<h2>Invite List</h2>

<% @invites.each do |invite| %>
<div>
    <ul>
      <li><p><%= link_to "#{invite.party.name}", guest_invite_path(invite.guest, invite) %> 
      - <%= invite.party.description %> 
      - Hosted by : <%= link_to "#{invite.party.host.name}", host_path(invite.party.host) %></p></li>
    </ul>
  </div>
<% end %>
