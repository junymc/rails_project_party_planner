<h1>New Guest</h1>
<p>Please fill out the form below to complete the sign up process.</p>

<%= form_with(model: @guest, url: [@invite, @guest], local: true) do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<br>

<%= f.label :age, "Age(number)" %>
<%= f.text_field :age %>
<br>

<%= f.label :gender %>
<%= f.select :gender, [ 'Male','Female' ], :prompt => 'Gender' %>
<br>

<%= f.submit "Create an account as a guest" %>
<% end %>

<% if @guest.errors.any? %>
  <% @guest.errors.full_messages.each do |m| %>
    <p class="danger"><%= m %></p>
  <% end %>
<% end %>